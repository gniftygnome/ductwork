{
  "multipart": [
    { "when": { "facing": "north" }, "apply": { "model": "ductwork:block/duct" } },
    { "when": { "facing": "east" },  "apply": { "model": "ductwork:block/duct", "y":  90 } },
    { "when": { "facing": "south" }, "apply": { "model": "ductwork:block/duct", "y": 180 } },
    { "when": { "facing": "west" },  "apply": { "model": "ductwork:block/duct", "y": 270 } },
    { "when": { "facing": "down" },  "apply": { "model": "ductwork:block/duct", "x":  90 } },
    { "when": { "facing": "up" },    "apply": { "model": "ductwork:block/duct", "x": 270 } },

    { "when": { "north": "true" }, "apply": { "model": "ductwork:block/duct_input" } },
    { "when": { "east":  "true" }, "apply": { "model": "ductwork:block/duct_input", "y":  90 } },
    { "when": { "south": "true" }, "apply": { "model": "ductwork:block/duct_input", "y": 180 } },
    { "when": { "west":  "true" }, "apply": { "model": "ductwork:block/duct_input", "y": 270 } },
    { "when": { "down":  "true" }, "apply": { "model": "ductwork:block/duct_input", "x":  90 } },
    { "when": { "up":    "true" }, "apply": { "model": "ductwork:block/duct_input", "x": 270 } }
  ]
}